<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/abc_ab_share_pack_holo_light"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sample.sampleworld.UserRegistration" >

    <TextView
        android:id="@+id/name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="45dp"
        android:text="@string/user_name" />
    <EditText
        android:id="@+id/name_edittext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/name_textview"
        android:layout_alignTop="@id/name_textview"
        android:background="@drawable/abc_ab_bottom_solid_light_holo"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/mail_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_textview"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/email_id" />
    <EditText
        android:id="@+id/mail_edittext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mail_edittext"
        android:layout_toRightOf="@id/mail_textview"
        android:layout_alignTop="@id/mail_textview"
        android:layout_alignLeft="@id/name_edittext"
        android:background="@drawable/abc_ab_bottom_solid_light_holo"
        android:inputType="textEmailAddress" />
    
