        android:layout_marginTop="10dp"
        android:layout_below="@id/blood_textview"
        android:text="@string/contact" />
    <EditText
        android:id="@+id/contact_edittext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/blood_edittext"
        android:layout_toRightOf="@id/contact_textview"
        android:layout_alignTop="@id/contact_textview"
        android:layout_alignLeft="@id/name_edittext"
        android:background="@drawable/abc_ab_bottom_solid_light_holo"
        android:inputType="text|phone" />  -->
    
    <TextView
        android:id="@+id/address_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/blood_textview"
        android:text="@string/address" />
    <EditText
        android:id="@+id/address_edittext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/blood_edittext"
        android:layout_toRightOf="@id/address_textview"
        android:layout_alignTop="@id/address_textview"
        android:layout_alignLeft="@id/name_edittext"
        android:background="@drawable/abc_ab_bottom_solid_light_holo"
        android:inputType="textPostalAddress" />
    
    <TextView
        android:id="@+id/dob_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/address_textview"
        android:text="@string/dob" />
    
    <EditText
        android:id="@+id/dob_edittext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/address_edittext"
        android:layout_toRightOf="@id/dob_textview"
        android:layout_alignTop="@id/dob_textview"
        android:layout_alignLeft="@id/name_edittext"
        android:background="@drawable/abc_ab_bottom_solid_light_holo"
        android:inputType="text|date" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        android:layout_marginBottom="78dp"
        android:text="@string/register" />

