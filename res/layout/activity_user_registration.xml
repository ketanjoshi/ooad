        android:layout_marginTop="10dp"
        android:text="@string/password" />
    <EditText
        android:id="@+id/password_edittext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mail_edittext"
        android:layout_toRightOf="@id/password_textview"
        android:layout_alignTop="@id/password_textview"
        android:layout_alignLeft="@id/name_edittext"
        android:background="@drawable/abc_ab_bottom_solid_light_holo"
        android:inputType="textPassword" />  -->

    <TextView
        android:id="@+id/blood_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mail_textview"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/blood_group" />
    <EditText
        android:id="@+id/blood_edittext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mail_edittext"
        android:layout_toRightOf="@id/blood_textview"
        android:layout_alignTop="@id/blood_textview"
        android:layout_alignLeft="@id/name_edittext"
        android:background="@drawable/abc_ab_bottom_solid_light_holo"
        android:inputType="text" />
    
    <!-- <TextView
        android:id="@+id/contact_textview"
        android:layout_width="wrap_content"
